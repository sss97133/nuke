{
  "imports": {
    "https://deno.land/std@0.208.0/": "https://deno.land/std@0.208.0/",
    "npm:@supabase/supabase-js@2.39.7": "npm:@supabase/supabase-js@2.39.7",
    "npm:cheerio@1.0.0-rc.12": "npm:cheerio@1.0.0-rc.12"
  },
  "compilerOptions": {
    "allowJs": true,
    "lib": ["deno.window", "deno.unstable", "dom"],
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowImportingTsExtensions": true,
    "checkJs": false,
    "noEmit": true
  },
  "tasks": {
    "start": "deno run --allow-net --allow-env --allow-read --allow-write --watch ."
  },
  "lint": {
    "files": {
      "include": ["**/*.ts"]
    },
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-explicit-any"]
    }
  },
  "fmt": {
    "files": {
      "include": ["**/*.ts"]
    },
    "options": {
      "useTabs": false,
      "lineWidth": 120,
      "indentWidth": 2,
      "singleQuote": true,
      "proseWrap": "preserve"
    }
  }
} 