#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🔍 Running pre-commit hooks..."

# Run lint-staged to handle linting and formatting
npx lint-staged

# Run query validator on staged files only
echo "🧪 Validating Supabase queries in staged files..."
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.(ts|tsx)$')
if [ -n "$STAGED_FILES" ]; then
  echo "$STAGED_FILES" | xargs node scripts/validate-supabase-queries.js --git-changed
  if [ $? -ne 0 ]; then
    echo "❌ Supabase query validation failed! Commit aborted."
    exit 1
  fi
fi

echo "✅ All pre-commit checks passed!"
