#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Skip in production environment
if [ "$NODE_ENV" = "production" ]; then
  echo "ğŸ” Skipping pre-commit hooks in production mode"
  exit 0
fi

echo "ğŸ” Running pre-commit hooks..."

# Run lint-staged for formatting and linting
npm run pre-commit

# Run query validator on staged files only
echo "ğŸ§ª Validating Supabase queries in staged files..."
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.(ts|tsx)$')
if [ -n "$STAGED_FILES" ]; then
  # Extract environment to not run in production
  if [ "$NODE_ENV" != "production" ]; then
    npm run validate:queries
  fi
fi

echo "âœ… All pre-commit checks passed!"
