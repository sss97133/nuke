{
    "manifest_version": 3,
    "name": "VehiDex",
    "version": "1.0",
    "description": "Universal vehicle data collector for enthusiasts",
    "permissions": [
      "activeTab",
      "storage",
      "downloads"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "content_scripts": [
      {
        "matches": [
  "http://*/*",
  "https://*/*"
],
        "js": ["content.js"]
      }
    ],
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }