# Dockerfile for KSL Playwright Scraper Service
# Deploy to Fly.io or Railway

FROM mcr.microsoft.com/playwright:v1.40.0-jammy

WORKDIR /app

# Install Node.js dependencies
COPY package*.json ./
RUN npm ci --only=production

# Copy service file
COPY scripts/ksl-playwright-service.js ./

# Expose port
EXPOSE 3001

# Start service
CMD ["node", "ksl-playwright-service.js"]

