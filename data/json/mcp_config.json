{
  "mcpServers": {
    "anthropic-mcp": {
      "args": [
        "./mcp/anthropic-mcp/index.js"
      ],
      "command": "node"
    },
    "browser": {
      "args": [
        "-y",
        "@modelcontextprotocol/server-browser"
      ],
      "command": "npx"
    },
    "claude-direct": {
      "args": [
        "-y",
        "@modelcontextprotocol/server-claude"
      ],
      "command": "npx"
    },
    "firecrawl-mcp": {
      "args": [
        "-y",
        "firecrawl-mcp"
      ],
      "command": "npx",
      "env": {
        "FIRECRAWL_API_KEY": "${FIRECRAWL_API_KEY}"
      }
    },
    "mendable-mcp": {
      "args": [
        "-y",
        "mendable-mcp"
      ],
      "command": "npx",
      "env": {
        "MENDABLE_API_KEY": "${MENDABLE_API_KEY}"
      }
    },
    "playwright": {
      "args": [
        "-y",
        "@playwright/mcp"
      ],
      "command": "npx"
    },
    "supabase": {
      "args": [
        "-y",
        "@supabase/mcp-server-supabase@latest",
        "--project-ref=qkgaybvrernstplzjaam"
      ],
      "command": "npx",
      "env": {
        "supabase_access_token": "${SUPABASE_ACCESS_TOKEN}"
      }
    }
  }
}
