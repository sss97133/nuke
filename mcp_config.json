{
  "mcpServers": {
    "anthropic-mcp": {
      "command": "node",
      "args": [
        "./mcp/anthropic-mcp/index.js"
      ]
    },
    "claude-direct": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-claude"
      ]
    },
    "supabase": {
      "command": "npx",
      "args": [
        "-y",
        "@supabase/mcp-server-supabase@latest",
        "--read-only",
        "--project-ref=qkgaybvrernstplzjaam"
      ]
    },
    "playwright": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-playwright"
      ]
    },
    "browser": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-browser"
      ]
    }
  }
}
